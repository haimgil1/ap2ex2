<Window x:Class="WpfMaze.OtherPlayerWinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMaze"
        mc:Ignorable="d"
        Title="OtherPlayerWinWindow" Height="150" Width="300">
    <Grid>
        <TextBlock Text="The other player won :(" FontSize="20" VerticalAlignment="Stretch"  HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Oblique">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FF15C9C9"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="btnExit" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Click="btnExit_Click" Margin="3" Padding="5" Height="32" >Exit game</Button>
    </Grid>
</Window>
