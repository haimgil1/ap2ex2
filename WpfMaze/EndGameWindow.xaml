<Window x:Class="WpfMaze.EndGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMaze"
        mc:Ignorable="d"
        Title="EndGameWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="     Are you sure?" FontSize="30" FontWeight="Bold" FontStyle="Oblique">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FF15C9C9"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="btnOk" HorizontalAlignment="Left" Width="75" Click="btnOK_Click" Margin="48,106,0,34.8" Padding="5" Height="32" >ok</Button>
        <Button x:Name="cancelOk" HorizontalAlignment="Left" Width="75" Click="btnCancel_Click" Margin="171,106,0,34.8" Padding="5" Height="32" >cancel</Button>

    </Grid>
</Window>
