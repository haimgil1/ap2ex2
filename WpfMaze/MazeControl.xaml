<UserControl x:Name="MazeController" x:Class="WpfMaze.MazeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMaze"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Viewbox>
            <Border BorderBrush="Black" BorderThickness="3">
                <Canvas x:Name="myCanvas" Width="300" Height="300">
                </Canvas>
            </Border>
        </Viewbox>
        <Rectangle> 
            <Rectangle.Fill>
                <ImageBrush x:Name="MinyonImage" ImageSource="minion.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle>
            <Rectangle.Fill>
                <ImageBrush x:Name="ExitImage" ImageSource="exit.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
