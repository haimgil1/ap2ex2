<Window x:Class="WpfMaze.SinglePlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfMaze"
        mc:Ignorable="d"
        Title="SettingWindow" Height="200" Width="300">
    <Grid TextBlock.FontSize="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:DetailsControl Grid.Column="1" Grid.Row="3" Margin="3" Loaded="DetailsControl_Loaded_1">

       </controls:DetailsControl>

        <Button x:Name="btnStart"  Grid.Row="4" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Click="btnStart_Click"  Padding="3" Grid.ColumnSpan="2" Margin="3" Width="117">Start game</Button>

    </Grid>
</Window>